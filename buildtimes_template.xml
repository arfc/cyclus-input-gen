<?xml version="1.0" standalone="no" ?>

<simulation xmlns:xi="http://www.w3.org/2001/XInclude">
    <facilities>
        {%- for reactor in reactors %}
        <xi:include href="../reactors/{{reactor}}.xml" />
        {% endfor %}
    </facilities>

    <DeployInsts>
        <prototypes>
            {%- for reactor in reactors %}
            <val>{{reactor}}</val>
            {%- endfor %}
        </prototypes>
        <build_times>
            {%- for buildtime in buildtimes %}
            <val>{{buildtime}}</val>
            {%- endfor %}
        </build_times>
        <n_build>
            {%- for buildtime in buildtimes %}
            <val>1</val>
            {%- endfor %}
        </n_build>
    </DeployInsts>
</simulation>
